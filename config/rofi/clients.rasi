configuration {
  font:                           "Galax Nerd Font Regular 13.5";
  show-icons:                     true;
  icon-theme:                     "Papirus-Dark";
  display-drun:                   "Applications";
  drun-display-format:            "{name}";
  disable-history:                false;
  sidebar-mode:                   false;
}

@import "./theme.rasi"

window {
  background-color:               @dark0;
  text-color:                     @white1;
  border:                         2px;
  border-color:                   @blue1;
  border-radius:                  4px;
  width:                          800px;
  location:                       center;
  x-offset:                       0px;
  y-offset:                       0px;
}

prompt {
  enabled:                        true;
  padding:                        6px 12px;
  background-color:               @blue1;
  text-color:                     @dark1;
  border-radius:                  4px;
  font:                           "Galax Nerd Font Regular 13.5";
}

textbox-prompt-colon {
  padding:                        6px 12px;
  border-radius:                  4px;
  background-color:               @blue1;
  text-color:                     @dark1;
  expand:                         false;
  str:                            " :: ";
}

entry {
  background-color:               @dark1;
  text-color:                     @white1;
  placeholder-color:              @gray1;
  expand:                         true;
  horizontal-align:               0;
  placeholder:                    "Search clients...";
  padding:                        6px 12px;
  bldark:                          false;
}

inputbar {
  children:                       [ prompt, entry ];
  background-color:               @dark0;
  text-color:                     @white2;
  expand:                         false;
  border-radius:                  4px;
  border-color:                   @blue1;
}

listview {
  background-color:               @none;
  padding:                        0px;
  columns:                        1;
  lines:                          6;
  spacing:                        8px;
  cycle:                          false;
  dynamic:                        true;
  layout:                         vertical;
}

mainbox {
  background-color:               @dark0;
  children:                       [ inputbar, listview ];
  spacing:                        8px;
  padding:                        8px;
}

element {
  background-color:               @dark1;
  text-color:                     @white0;
  orientation:                    horizontal;
  border-radius:                  4px;
  padding:                        6px 12px;
}

element-icon {
  background-color:               inherit;
  text-color:                     inherit;
  horizontal-align:               0.5;
  vertical-align:                 0.5;
  size:                           16px;
}

element-text {
  background-color:               @none;
  text-color:                     inherit;
  expand:                         true;
  horizontal-align:               0;
  vertical-align:                 0.5;
  margin:                         0px 10px;
}

element selected {
  background-color:               @blue1;
  text-color:                     @dark0;
}
