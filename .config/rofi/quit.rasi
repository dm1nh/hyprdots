configuration {
  show-icons:                     false;
  font:                           "HollowNight Nerd Font Regular 14";
  disable-history:                false;
  sidebar-mode:                   false;
}

@import "./colors.rasi"

* {
  background-color:               @bg-dark1;
  text-color:                     @fg;
}

window {
  transparency:                   "real";
  border-radius:                  16px;
  border:                         2px;
  border-color:                   @red;
  location:                       center;
  width:                          528px;
  x-offset:                       0px;
  y-offset:                       0px;
}

prompt {
  enabled:                        true;
  padding:                        4px 8px;
  background-color:               @bg;
  text-color:                     @red;
  border-radius:                  16px;
}

textbox-prompt-colon {
  expand:                         false;
  str:                            "See you ó°‹‘ ";
  background-color:               @red;
  text-color:                     @bg;
  padding:                        4px 8px;
  border-radius:                  16px;
}

inputbar {
  children:                       [ textbox-prompt-colon, prompt ];
  spacing:                        8px;
  background-color:               @bg-dark1;
  text-color:                     @fg;
  expand:                         false;
  border:                         0px;
  border-radius:                  0px;
  border-color:                   @red;
  margin:                         0px 0px 0px 0px;
  padding:                        0px;
  position:                       center;
}

listview {
  columns:                        5;
  lines:                          1;
  spacing:                        8px;
  cycle:                          true;
  dynamic:                        true;
  layout:                         vertical;
}

mainbox {
  background-color:               @bg-dark1;
  children:                       [ inputbar, listview ];
  spacing:                        8px;
  padding:                        8px;
}

element {
  background-color:               @bg;
  text-color:                     @fg-dark;
  orientation:                    vertical;
  border-radius:                  16px;
}

element-text {
  background-color:               inherit;
  text-color:                     inherit;
  font:                           "Material Symbols Rounded 24";
  expand:                         true;
  horizontal-align:               0.5;
  vertical-align:                 0.5;
  margin:                         28px 0px;
}

element normal.urgent,
element alternate.urgent {
  text-color:                     @bg;
  border-radius:                  16px;
}

element normal.active,
element alternate.active {
  background-color:               @red;
  text-color:                     @bg;
}

element selected {
  background-color:               @red;
  text-color:                     @bg;
}
